<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#EDEDED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/batchname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Batch Name"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privacy_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/batchname_id"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Batch Created : "
                android:textColor="#403F3F"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/DateOfJOINING"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/batchname_id"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/privacy_icon"
                android:paddingLeft="10dp"
                android:text="30-10-1998"
                android:textColor="#0089F6"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/hidelayput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/privacy_icon"

                android:padding="15dp">


                <Button
                    android:id="@+id/addStudent_id"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_corner_set"
                    android:text="Add Member"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold"

                    />
            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>