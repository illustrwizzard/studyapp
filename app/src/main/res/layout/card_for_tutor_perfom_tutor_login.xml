<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="2dp"

        android:background="@color/white"
        android:outlineSpotShadowColor="@color/black"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"


            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textColor="@color/black"
                android:textSize="20dp"
     />

            <TextView
                android:id="@+id/text_per2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_per"
                android:layout_marginTop="10dp"
                android:text="Date    : "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@id/text_per"

                android:text="Gladson J Sunny"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textjoing2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_per"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/text_per2"

                android:text="04/05/2022"
                android:textSize="20dp"
                android:textStyle="italic" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>