<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/reley"
    android:padding="10dp"
    tools:context=".BatchOverview">
    <RelativeLayout
        android:id="@+id/ttttttt"
        android:elevation="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bachname1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:paddingLeft="5dp"
            android:text="IELTS GENERAL 2022"
            android:textColor="@color/black"

            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/stuname1"
        android:layout_below="@id/ttttttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="jjdajda ddladadhadhadha"
        />


    <RelativeLayout
        android:id="@+id/hhhhhhh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stuname1"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:padding="5dp"

        >

        <ImageView
            android:id="@+id/eeee45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"

            android:src="@drawable/ic_calendar_month" />

        <TextView
            android:id="@+id/opqer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/eeee45"
            android:text="Batch start Date"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/ggggggg34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="79dp"
           android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="Batch Code"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/opiiiiii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opqer"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/eeee45"
            android:text="07/01/1999"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/batchcode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ggggggg34"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="ign77y5q"
            android:textSize="16dp"
            android:textStyle="normal" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bobobobb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/hhhhhhh"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Personal Information"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bobobobb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bobobobb"
        android:background="@color/white"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:id="@+id/p_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="mail@gmail.com"
                    android:textSize="16dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone_o" />

                <TextView
                    android:id="@+id/p_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="8607656464466"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/p_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="fdssfsfsf fsf f sfsfsfsfsf "
                    android:textSize="16dp" />


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>






</RelativeLayout>