<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/batchrecycler"
        app:cardBackgroundColor="#F1F1F1"
        app:cardCornerRadius="10dp"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgbatch"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/profile_icon" />

            <TextView
                android:id="@+id/textbatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@+id/imgbatch"
                android:text="IELTS GENERAL 2022"
                android:textColor="#2196F3"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textbatch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textbatch"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/imgbatch"
                android:text="Axis Language School"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="normal" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

