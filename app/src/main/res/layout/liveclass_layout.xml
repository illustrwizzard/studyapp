<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/meetingimg"/>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Enter your meeting code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/meeting_batch_spinner"
        android:paddingLeft="10dp"
        android:background="@drawable/borderdesign22"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="65dp"
        android:hint="Enter Batch"
        />


    <EditText
        android:id="@+id/meeting_code"
        android:paddingLeft="10dp"
        android:background="@drawable/borderdesign22"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="65dp"
        android:hint="Enter Code"
        />
    <Button
        android:id="@+id/joinorcreate"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:text="Join/Create"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_corner_set"
        />



</LinearLayout>